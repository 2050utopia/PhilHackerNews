<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        tools:text="999+"
        android:id="@+id/upvotesTextView"
        android:padding="@dimen/small_padding"
        android:background="@drawable/circle"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:ignore="SpUsage"/>
        <!-- We use dp here ^^ for text size to ensure that text fits within circle -->

    <TextView
        android:id="@+id/storyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginStart="@dimen/small_padding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        tools:text="Why HackerNews is Awesomer than your news source"
        android:layout_toEndOf="@id/upvotesTextView"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="@dimen/tiny_padding"
        android:layout_alignStart="@id/storyTitleTextView"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/storyTitleTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="PhilosophicalHacker"/>
</RelativeLayout>