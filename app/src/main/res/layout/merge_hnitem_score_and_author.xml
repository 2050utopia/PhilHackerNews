<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">
       <TextView
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:gravity="center"
           android:layout_marginStart="@dimen/activity_horizontal_margin"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="18dp"
           tools:text="999+"
           android:id="@+id/upvotesTextView"
           android:padding="@dimen/small_padding"
           android:background="@drawable/circle"
           android:textColor="@android:color/white"
           android:layout_marginTop="@dimen/small_padding"
           android:layout_alignParentStart="true"
           tools:ignore="SpUsage"/>
       <!-- We use dp here ^^ for text size to ensure that text fits within circle -->

       <TextView
           android:id="@+id/authorTextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:layout_marginTop="@dimen/tiny_padding"
           android:layout_alignStart="@id/itemTextView"
           android:layout_marginEnd="@dimen/activity_horizontal_margin"
           android:layout_below="@+id/itemTextView"
           android:textAppearance="?android:attr/textAppearanceMedium"
           tools:text="PhilosophicalHacker"/>
</merge>